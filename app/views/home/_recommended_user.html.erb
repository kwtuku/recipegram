<div class="media border-0 p-0 m-3">
  <div class="media-left margin-auto-0 mr-4">
    <%= link_to user_path(user) do %>
      <figure class="image is-32x32">
        <%= image_tag user.user_image.icon, type: :upload, quality: 'auto', fetch_format: :auto, class: 'is-rounded' %>
      </figure>
    <% end %>
  </div>
  <div class="media-content">
    <p class="is-size-6 is-1-line">
      <span><%= link_to user.nickname, user_path(user), title: user.nickname, class: 'has-text-black-bis text-break hover-underline' %></span>
    </p>
    <p class="is-size-7 has-text-grey-light"><%= recommended_description(user) %></p>
  </div>
  <div class="media-right margin-auto-0">
    <div class="js-follow-button-<%= user.id %>">
      <%= render 'shared/follow_button', user: user, size: 'is-small' %>
    </div>
  </div>
</div>
