<p class="has-text-grey-light"><%= feed_description(feed) %></p>
<div class="card mb-5" data-infinite-scroll-item="" data-rspec="recipe-<%= feed.id %>">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <%= link_to user_path(feed.user) do %>
          <figure class="image is-24x24">
            <%= image_tag feed.user.user_image.icon.url, class: 'is-rounded' %>
          </figure>
        <% end %>
      </div>
      <div class="media-content is-1-line">
        <%= link_to user_path(feed.user) do %>
          <span class="has-text-black-bis text-break hover-underline" title="<%= feed.user.nickname %>"><%= feed.user.nickname %></span>
        <% end %>
      </div>
      <% if user_signed_in? && feed.user == current_user %>
        <div class="media-right">
          <div class="dropdown is-right">
            <div class="dropdown-trigger">
              <button class="button is-white is-small" aria-haspopup="true" aria-controls="dropdown-menu">
                <span class="icon is-small">
                  <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                </span>
              </button>
            </div>
            <div class="dropdown-menu" id="dropdown-menu" role="menu">
              <div class="dropdown-content">
                  <%= link_to edit_recipe_path(feed), class: 'dropdown-item' do %>
                    <span class="icon">
                        <i class="fas fa-edit"></i>
                      </span>
                      <span>編集する</span>
                    </span>
                  <% end %>
                  <%= link_to recipe_path(feed), method: :delete, data: {confirm: '本当にレシピを削除しますか？'}, class: 'dropdown-item' do %>
                    <span class="icon">
                        <i class="far fa-trash-alt"></i>
                      </span>
                      <span>削除する</span>
                    </span>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card-image">
    <%= link_to recipe_path(feed) do %>
      <figure class="image is-1by1 has-mask">
        <%= image_tag feed.recipe_image.main.url %>
        <div class="mask has-text-centered">
          <p class="has-text-white">
            <span class="icon-text mr-3">
              <span class="icon">
                <i class="far fa-heart"></i>
              </span>
              <span><%= feed.favorites_count %></span>
            </span>
            <span class="icon-text">
              <span class="icon">
                <i class="far fa-comment"></i>
              </span>
              <span><%= feed.comments_count %></span>
            </span>
          </p>
        </div>
      </figure>
    <% end %>
  </div>
</div>
