<div class="column is-6-mobile is-4-tablet is-3-desktop">
  <div class="card" data-rspec="recipe-<%= recipe.id %>">
    <div class="card-image">
      <%= link_to recipe_path(recipe) do %>
        <figure class="image is-1by1 mask-container">
          <%= image_tag recipe.first_image.url(:thumb) %>
          <% if recipe.images.size > 2 %>
            <div class="has-text-white has-text-right p-2 is-overlay">
              <span class="icon">
                <i class="fas fa-clone"></i>
              </span>
            </div>
          <% end %>
          <div class="mask has-text-centered">
            <p class="has-text-white mask-text">
              <span class="icon">
                <i class="far fa-heart"></i>
              </span>
              <span><%= recipe.favorites_count %></span>
              <span class="icon ml-3">
                <i class="far fa-comment"></i>
              </span>
              <span><%= recipe.comments_count %></span>
            </p>
          </div>
        </figure>
      <% end %>
    </div>
  </div>
</div>
