<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <%= form_with model: recipe do |f| %>
          <div class="field">
            <%= f.label :title, "レシピ名", class: "label" %>
            <%= f.text_field :title, required: true, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :body, "作り方", class: "label" %>
            <%= f.text_area :body, required: true, class: "textarea" %>
          </div>
          <div class="field">
            <%= f.label :recipe_image, "レシピ画像", class: "label" %>
            <%= f.file_field :recipe_image, required: true, class: "file", accept: "image/jpg, image/jpeg, image/png, image/webp" %>
            <%= render "devise/shared/full_error_messages", model: recipe, attribute: :recipe_image %>
          </div>
          <%= f.submit value, class: "button is-rounded is-success", id: "#{id}", disabled: true %>
        <% end %>
      </div>
    </div>
  </div>
</section>
