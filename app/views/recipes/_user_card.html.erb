<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <%= link_to user_path(user) do %>
          <figure class="image is-48x48">
            <%= image_tag user.user_image.icon.url, class: 'is-rounded' %>
          </figure>
        <% end %>
      </div>
      <div class="media-content">
        <%= link_to user_path(user) do %>
          <p class="title mb-0 is-size-5 is-1-line">
            <span class="has-text-black-bis text-break hover-underline" title="<%= user.nickname %>"><%= user.nickname %></span>
          </p>
          <p class="has-text-grey-light text-break">@<%= user.username %></p>
        <% end %>
        <div class="mt-1 js-follow-button-<%= user.id %>">
          <%= render 'shared/follow_button', user: user, size: 'is-small' %>
        </div>
      </div>
    </div>
    <% if user.profile.present? %>
      <div class="content">
        <p class="text-break <%= show_some_lines_depends_on(@other_recipes) %>"><span><%= user.profile %></span></p>
      </div>
    <% end %>
  </div>
</div>
