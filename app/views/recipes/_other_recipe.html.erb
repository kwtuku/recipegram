<div class="column is-4">
  <div class="card">
    <div class="card-image">
      <%= link_to recipe_path(recipe) do %>
        <figure class="image is-1by1 has-mask">
          <%= image_tag recipe.recipe_image.thumb.url %>
          <div class="mask has-text-centered">
            <p class="has-text-white">
              <span class="icon-text mr-3">
                <span class="icon is-small">
                  <i class="far fa-heart"></i>
                </span>
                <span class="is-size-6"><%= recipe.favorites_count %></span>
              </span>
              <span class="icon-text">
                <span class="icon is-small">
                  <i class="far fa-comment"></i>
                </span>
                <span class="is-size-6"><%= recipe.comments_count %></span>
              </span>
            </p>
          </div>
        </figure>
      <% end %>
    </div>
  </div>
</div>
