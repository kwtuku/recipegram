<div class="column is-4 pb-0">
  <div class="card">
    <div class="card-image">
      <%= link_to recipe_path(recipe) do %>
        <figure class="image is-1by1 mask-container">
          <%= image_tag recipe.first_image.url(:thumb) %>
          <div class="mask has-text-centered">
            <p class="has-text-white mask-text">
              <span class="icon is-small">
                <i class="far fa-heart"></i>
              </span>
              <span class="is-size-6"><%= recipe.favorites_count %></span>
              <span class="icon is-small ml-3">
                <i class="far fa-comment"></i>
              </span>
              <span class="is-size-6"><%= recipe.comments_count %></span>
            </p>
          </div>
        </figure>
      <% end %>
    </div>
  </div>
</div>
