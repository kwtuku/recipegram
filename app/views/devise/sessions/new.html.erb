<% provide(:title, t('.sign_in')) %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= link_to root_path do %>
          <p class="title is-1 has-text-centered mb-5 recipegram">Recipegram</p>
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'box p-6' }) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'label' %>
            <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true, class: 'input' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: 'label' %>
            <div class="control has-icons-right js-handle-password-mask">
              <%= f.password_field :password, autocomplete: 'current-password', required: true, minlength: @minimum_password_length, maxlength: 128, class: 'input' %>
              <span class="icon is-small is-right is-clickable form-icon" data-tooltip="パスワードを表示">
                <i class="far fa-eye-slash"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <%= f.label :remember_me, class: 'checkbox' do %>
              <%= f.check_box :remember_me %>
              <%= resource.class.human_attribute_name('remember_me') %>
            <% end %>
          </div>

          <%= f.submit t('.sign_in'), class: 'button is-fullwidth is-rounded is-info', id: 'signin', disabled: true %>

          <div class="is-flex is-justify-content-center mt-4">
            <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: 'hover-underline' %>
            <span class="mx-2">/</span>
            <%= link_to '新規登録', new_user_registration_path, class: 'hover-underline' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
