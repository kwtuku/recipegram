<% provide(:title, "#{t('.forgot_your_password')}") %>

<%= render 'devise/shared/error_messages', resource: resource %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= link_to root_path do %>
          <p class="title is-1 has-text-centered mb-6 recipegram">Recipegram</p>
        <% end %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'label' %>
            <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true, class: 'input' %>
            </div>
            <%= render 'devise/shared/full_error_messages', model: resource, attribute: :email %>
          </div>

          <div class="field">
            <%= f.submit t('.send_me_reset_password_instructions'), class: 'button is-fullwidth is-rounded is-link', id: 'reset_password', disabled: true %>
          </div>
        <% end %>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</section>
