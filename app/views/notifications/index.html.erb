<% provide(:title, '通知一覧') %>

<section class="section">
  <div class="container">
    <h1 class="title has-text-centered">通知一覧</h1>
    <div class="columns is-centered">
      <div class="column is-9">
        <% if @notifications.present? %>
          <div class="mb-5">
            <%= render @notifications %>
          </div>
          <%= paginate @notifications %>
        <% else %>
          <p class="has-text-centered">通知はありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</section>
