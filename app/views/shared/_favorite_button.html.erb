<% if current_user.already_favored?(model) %>
  <%= link_to recipe_favorites_path(model), method: :delete, remote: true do %>
    <i class="fas fa-heart"></i>
    <%= model.favorites.count %>
  <% end %>
<% else %>
  <%= link_to recipe_favorites_path(model), method: :post, remote: true do %>
    <i class="far fa-heart"></i>
    <%= model.favorites.count %>
  <% end %>
<% end %>
