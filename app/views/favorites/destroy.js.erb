document.querySelectorAll('.js-favorite-button-<%= @recipe.id %>').forEach(button => {
  var buttonIcon = button.querySelector('.icon');
  var buttonFont = button.querySelector('i');

  if (buttonIcon.classList.contains('is-large') && buttonFont.classList.contains('fa-lg')) {
    button.innerHTML = "<%= j(render('shared/favorite_button', recipe: @recipe, icon_size: 'is-large', fa_size: 'fa-lg')) %>";
  } else {
    button.innerHTML = "<%= j(render('shared/favorite_button', recipe: @recipe, icon_size: '', fa_size: '')) %>";
  }
});

document.querySelectorAll('.js-recount-favorites').forEach(recountFavorites => {
  recountFavorites.textContent = "<%= @recipe.favorites.size %>";
});
