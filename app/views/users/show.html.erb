<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <% if @user.id == current_user.id %>
          マイページ
        <% else %>
          <%= @user.username %>さんの詳細
        <% end %>
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <div class="columns">
          <div class="column is-2">
            <figure class="image is-128x128" style="margin-left: auto; margin-right: auto;">
              <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded" %>
            </figure>
          </div>
          <div class="column is-10">
            <table class="table is-fullwidth">
              <tr>
                <td class="is-size-4">
                  <strong><%= @user.username %></strong>
                </td>
                <% if @user.id == current_user.id %>
                  <td class="is-size-4">
                    <%= @user.email %>
                  </td>
                  <td>
                    <%= link_to "編集", edit_user_path(@user), class: "button is-primary" %>
                  </td>
                <% end %>
                <td>
                  <%= render 'shared/follow_button', user: @user %>
                </td>
                <td>
                  <%= link_to user_followings_path(@user), class: "button has-text-black-bis" do %>
                    <strong><%= @user.followings.count %></strong> フォロー中
                  <% end %>
                </td>
                <td>
                  <%= render 'shared/count_followers', user: @user %>
                </td>
              </tr>
            </table>
            <table class="table is-fullwidth">
              <tr>
                <td>
                  <%= @user.profile %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @user.recipes.each do |recipe| %>
        <div class="column is-4">
          <%= render 'shared/recipe_card', recipe: recipe %>
        </div>
      <% end %>
    </div>
  </div>
</section>
