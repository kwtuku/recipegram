<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <% if @user.id == current_user.id %>
          マイページ
        <% else %>
          <%= @user.username %>さんの詳細
        <% end %>
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <div class="media">
          <figure class="media-left is-hidden-mobile mr-6">
            <p class="image is-128x128">
              <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded" %>
            </p>
          </figure>
          <div class="media-content">
            <figure class="level is-hidden-tablet mb-6">
              <div class="level-item">
                <p class="image is-128x128">
                  <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded" %>
                </p>
              </div>
            </figure>
            <div class="level is-mobile">
              <div class="level-left">
                <div class="level-item">
                  <p class="title"><%= @user.username %></p>
                </div>
              </div>
              <div class="level-right">
                <div class="level-item">
                  <%= render 'shared/follow_button', user: @user %>
                </div>
                <% if @user.id == current_user.id %>
                  <div class="level-item">
                    <%= link_to "編集", edit_user_path(@user), class: "button is-primary is-rounded" %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="level is-mobile">
              <div class="level-item has-text-centered">
                <div>
                  <p class="heading">投稿</p>
                  <p class="title"><%= @user.recipes.size %></p>
                </div>
              </div>
              <div class="level-item has-text-centered">
                <div>
                  <p class="heading">いいねされた</p>
                  <p class="title"><%= @recipes_favorites_count %></p>
                </div>
              </div>
              <div class="level-item has-text-centered">
                <%= link_to user_followings_path(@user), class: "has-text-black-bis" do %>
                  <div>
                    <p class="heading">フォロー中</p>
                    <p class="title"><%= @user.followings.size %></p>
                  </div>
                <% end %>
              </div>
              <div class="level-item has-text-centered">
                <%= link_to user_followers_path(@user), class: "has-text-black-bis" do %>
                  <div>
                    <p class="heading">フォロワー</p>
                    <p class="title" id='recount_followers'><%= @user.followers.size %></p>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="content">
              <%= @user.profile %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="tabs is-boxed is-centered is-fullwidth">
      <ul>
        <li class="is-active">
          <a>
            <span class="icon is-small"><i class="fas fa-pen" aria-hidden="true"></i></span>
            <span>投稿</span>
          </a>
        </li>
        <li>
          <a>
            <span class="icon is-small"><i class="fas fa-reply" aria-hidden="true"></i></span>
            <span>コメント</span>
          </a>
        </li>
        <li>
          <a>
            <span class="icon is-small"><i class="fas fa-heart" aria-hidden="true"></i></span>
            <span>いいね</span>
          </a>
        </li>
      </ul>
    </div>
    <div class="columns is-multiline">
      <% @user.recipes.find_each do |recipe| %>
        <div class="column is-4">
          <%= render 'shared/recipe_card', recipe: recipe %>
        </div>
      <% end %>
    </div>
  </div>
</section>
