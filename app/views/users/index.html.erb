<% provide(:title, 'ユーザー一覧') %>

<section class="section p-0-mobile">
  <div class="container">
    <h1 class="title has-text-centered">ユーザー一覧</h1>
    <div class="columns is-multiline is-mobile m-0-mobile" id="pageables-container">
      <%= render @users %>
    </div>
    <% unless @users.last_page? %>
      <div class="loading-animation" id="loading-animation"></div>
      <div id="next-page-link-container">
        <%= render 'shared/next_page_link', pageables: @users %>
      </div>
    <% end %>
  </div>
</section>
