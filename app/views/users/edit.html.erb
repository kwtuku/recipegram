<% provide(:title, 'プロフィール編集') %>

<%= render 'layouts/hero', hero_title: 'プロフィール編集' %>

<%= render 'shared/error_messages', model: @user %>

<section class="section">
  <div class="container">
    <%= form_with model: @user do |f| %>
      <div class="columns is-centered">
        <div class="column is-5">
          <div class="file is-centered">
            <%= f.label :user_image do %>
              <%= f.file_field :user_image, class: 'is-hidden', accept: 'image/jpg, image/jpeg, image/png, image/webp' %>
              <figure class="image cursor-pointer" id="file-cta">
                <%= image_tag @user.user_image.url(:thumb), class: 'is-rounded is-256x256' %>
              </figure>
              <img class="is-hidden is-256x256 round" id="file-preview">
            <% end %>
            <%= render 'devise/shared/full_error_messages', model: @user, attribute: :user_image %>
          </div>
        </div>
        <div class="column is-6">
          <div class="field">
            <%= f.label :nickname, 'ユーザー名', class: 'label' %>
            <%= f.text_field :nickname, required: true, class: 'input' %>
          </div>
          <div class="field">
            <%= f.label :profile, 'プロフィール', class: 'label' %>
            <%= f.text_area :profile, class: 'textarea has-fixed-size' %>
          </div>
          <%= f.submit 'プロフィールを更新', class: 'button is-rounded is-success', id: 'update_user', disabled: true %>
        </div>
      </div>
    <% end %>
  </div>
</section>
