<% provide(:title, 'プロフィール編集') %>

<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">プロフィール編集</h1>
    </div>
  </div>
</section>

<%= render 'shared/error_messages', model: @user %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <%= form_with model: @user do |f| %>
          <div class="field">
            <%= f.label :username, "ユーザー名", class: "label" %>
            <%= f.text_field :username, required: true, class: "input" %>
          </div>
          <div class="field">
            <%= f.label :profile, "プロフィール", class: "label" %>
            <%= f.text_area :profile, class: "textarea" %>
          </div>
          <div class="field">
            <%= f.label :user_image, "プロフィール画像", class: "label" %>
            <%= f.file_field :user_image, class: "file", accept: "image/jpg, image/jpeg, image/png, image/webp" %>
          </div>
          <%= f.submit "プロフィールを更新", class: "button is-rounded is-success", id: "update_user", disabled: true %>
        <% end %>
      </div>
    </div>
  </div>
</section>
