<% provide(:title, "#{@user.username}さんがフォロー中") %>

<section class="hero is-small">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-centered">
        <span class="icon-text">
          <%= link_to user_path(@user), class: 'has-text-grey-darker hover-underline' do %>
            <span class="icon">
              <i class="fas fa-arrow-left"></i>
            </span>
            <span><%= @user.username %>さん</span>
          <% end %>
          <span>がフォロー中</span>
        </span>
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-9" id="infinite-scroll-container" data-infinite-scroll="true">
        <% if @followings.exists? %>
          <%= render partial: 'users/user_list', collection: @followings, as: 'user' %>
        <% else %>
          <% if @user == current_user %>
            <p>まだ誰もフォローしていません</p>
          <% else %>
            <p><%= @user.username %>さんはまだ誰もフォローしていません</p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
