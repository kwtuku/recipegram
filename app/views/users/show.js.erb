var container = document.getElementById('pageables-container');
container.insertAdjacentHTML('beforeend', '<%= j(render @recipes) %>');

var linkContainer = document.getElementById('next-page-link-container');
linkContainer.innerHTML = "<%= j(render 'shared/next_page_link', pageables: @recipes) %>";

<% unless @recipes.next_page %>
  document.getElementById('loading-animation').remove();
<% end %>
